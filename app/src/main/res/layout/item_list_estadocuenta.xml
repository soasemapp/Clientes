<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/DividerColor" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idFactura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Folio de Factura"
                android:textColor="@color/PrimaryColor"
                android:textSize="20sp"
                android:layout_gravity="end"

                />
            <TextView
                android:id="@+id/idplazodefactura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plazo de Factura"
                />
            <TextView
                android:id="@+id/idfechanacimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de Vencimiento"
                />
            <TextView
                android:id="@+id/idsaldofactura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Saldo de Factura"
                />
            <TextView
                android:id="@+id/idmontofactura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Monto de Factura"
                />






        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>

